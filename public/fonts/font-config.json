{
  "version": "1.0.0",
  "description": "Multi-language font configuration for video processing",
  "defaultFont": "NotoSans",
  "supportedLanguages": {
    "vi": {
      "name": "Vietnamese",
      "fonts": {
        "primary": ["NotoSans", "OpenSans", "Roboto"],
        "fallback": ["Arial", "sans-serif"],
        "weights": [300, 400, 500, 600, 700],
        "styles": ["normal", "italic"]
      },
      "specialHandling": {
        "lineHeight": 1.4,
        "letterSpacing": 0.0,
        "fontSizeAdjustment": 0.9,
        "diacriticSupport": true
      }
    },
    "hi": {
      "name": "Hindi",
      "fonts": {
        "primary": ["NotoSans", "Roboto", "Arial"],
        "fallback": ["Helvetica", "sans-serif"],
        "weights": [300, 400, 500, 600, 700],
        "styles": ["normal", "italic"]
      },
      "specialHandling": {
        "lineHeight": 1.6,
        "letterSpacing": 0.0,
        "fontSizeAdjustment": 1.1,
        "devanagariSupport": true
      }
    },
    "fr": {
      "name": "French",
      "fonts": {
        "primary": ["NotoSans", "OpenSans", "Roboto"],
        "fallback": ["Arial", "Helvetica", "sans-serif"],
        "weights": [300, 400, 500, 600, 700],
        "styles": ["normal", "italic"]
      },
      "specialHandling": {
        "lineHeight": 1.3,
        "letterSpacing": 0.0,
        "fontSizeAdjustment": 0.95,
        "accentSupport": true
      }
    },
    "es": {
      "name": "Spanish",
      "fonts": {
        "primary": ["NotoSans", "OpenSans", "Roboto"],
        "fallback": ["Arial", "Helvetica", "sans-serif"],
        "weights": [300, 400, 500, 600, 700],
        "styles": ["normal", "italic"]
      },
      "specialHandling": {
        "lineHeight": 1.3,
        "letterSpacing": 0.0,
        "fontSizeAdjustment": 0.95,
        "accentSupport": true
      }
    }
  },
  "fontFiles": {
    "NotoSans": {
      "variants": {
        "Regular": "NotoSans-Regular.ttf",
        "Bold": "NotoSans-Bold.ttf",
        "Italic": "NotoSans-Italic.ttf",
        "BoldItalic": "NotoSans-BoldItalic.ttf",
        "Light": "NotoSans-Light.ttf",
        "Medium": "NotoSans-Medium.ttf"
      },
      "unicodeRanges": ["U+0000-024F", "U+1E00-1EFF", "U+2000-206F", "U+0900-097F"],
      "fileSize": 850000,
      "source": "google"
    },
    "Roboto": {
      "variants": {
        "Regular": "Roboto-Regular.ttf",
        "Bold": "Roboto-Bold.ttf",
        "Italic": "Roboto-Italic.ttf",
        "Light": "Roboto-Light.ttf",
        "Medium": "Roboto-Medium.ttf"
      },
      "unicodeRanges": ["U+0000-024F", "U+1E00-1EFF", "U+0900-097F"],
      "fileSize": 1000000,
      "source": "google"
    },
    "OpenSans": {
      "variants": {
        "Regular": "OpenSans-Regular.ttf",
        "Bold": "OpenSans-Bold.ttf",
        "Italic": "OpenSans-Italic.ttf",
        "Light": "OpenSans-Light.ttf",
        "SemiBold": "OpenSans-SemiBold.ttf"
      },
      "unicodeRanges": ["U+0000-024F", "U+1E00-1EFF", "U+0900-097F"],
      "fileSize": 900000,
      "source": "google"
    }
  },
  "fontSubstitution": {
    "common": {
      "missing": "□",
      "unknown": "�",
      "space": " ",
      "punctuation": ".,;:!?\"'()"
    },
    "languageSpecific": {
      "hi": {
        "missing": "？",
        "devanagari": true
      },
      "vi": {
        "missing": "？",
        "diacritics": true
      }
    }
  },
  "optimization": {
    "preloadLanguages": ["vi", "hi", "fr", "es"],
    "lazyLoadThreshold": 1000000,
    "cacheTimeout": 3600000,
    "maxCacheSize": 50000000,
    "parallelLoads": 3
  },
  "ffmpeg": {
    "fontPath": "/fonts/",
    "defaultFontsize": 24,
    "defaultFontColor": "white",
    "defaultBackgroundColor": "black@0.7",
    "defaultOutlineColor": "black@0.8",
    "defaultShadowColor": "black@0.5",
    "maxCaptionLength": 80,
    "lineSpacing": 1.2,
    "characterSpacing": 0,
    "margin": {
      "horizontal": 20,
      "vertical": 20
    },
    "position": {
      "x": "(w-tw)/2",
      "y": "h-th-20"
    }
  }
}